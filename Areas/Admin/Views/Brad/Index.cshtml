@model IEnumerable<BradModel>
@{
    ViewData["title"] = "thương hiệu Listed";
}
<h3>list product</h3>
<a asp-action="Create" asp-controller="Brad">thêm thương hiệu</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Category Name</th>
            <th scope="col">Category Desrcription</th>
            <th scope="col">Category Slug</th>
            <th scope="col">Category Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@Html.Raw(@item.Description)</td>
                <td>@item.Slug</td>
                <td>
                    @if (@item.Status == 1)
                    {
                        <span class="text text-success"> hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-success"> ẩn</span>

                    }

                </td>

                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Brad" asp-route-Id="@item.Id">Sửa sản phẩm</a>
                    <br>
                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-controller="Brad" asp-route-Id="@item.Id">Xóa sản phẩm</a>
                </td>
            </tr>
        }
    </tbody>
</table>