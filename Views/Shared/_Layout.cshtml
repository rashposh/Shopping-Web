    <style>
        /* Custom CSS */
        body {
            font-family: 'Arial', sans-serif;
        }

        .navbar-nav .nav-item .nav-link {
            color: #555;
            font-weight: bold;
        }

            .navbar-nav .nav-item .nav-link:hover {
                color: #000;
            }

        .carousel-inner img {
            width: 100%;
            height: auto;
        }

        .footer-top {
            background: #333;
            color: #fff;
            padding: 30px 0;
        }

        .footer-widget h2 {
            color: #fff;
        }

        .footer-bottom {
            background: #222;
